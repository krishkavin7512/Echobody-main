{
    "name": "echobody-root",
    "private": true,
    "scripts": {
        "start:all": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "start:backend": "cd backend && mvnw spring-boot:run",
        "start:frontend": "cd frontend && npm run dev",
        "install:all": "npm install && cd frontend && npm install"
